{
  "name": "b2b-eshop-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npx prisma generate && tsc",
    "start": "npx prisma migrate deploy && node dist/index.js",
    "railway:build": "npx prisma generate && npm run build",
    "railway:start": "node dist/index.js",
    "railway:migrate": "npx prisma migrate deploy",
    "test:railway": "NODE_ENV=production PORT=3000 HOST=0.0.0.0 npm run build && npm start",
    "docker:build": "docker build -f Dockerfile.local -t b2b-backend-local .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 b2b-backend-local",
    "docker:compose": "docker-compose -f docker-compose.local.yml up --build",
    "debug:railway": "node scripts/debug-railway.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/seed.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"prisma/seed.ts\"",
    "pre-commit": "npm run lint && npm run format:check && npm run build",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "We Are Lootea s. r. o.",
  "license": "UNLICENSED",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.10.1",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "graphql": "^16.11.0",
    "handlebars": "^4.7.8",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.3",
    "prisma": "^6.10.1",
    "react-icons": "^5.5.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@faker-js/faker": "^9.8.0",
    "@types/bcrypt": "^5.0.2",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.4",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "graphql-request": "^7.2.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
